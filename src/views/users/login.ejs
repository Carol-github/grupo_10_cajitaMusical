<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head')%>
<body>
    
    
    <!-- header -->
    <%- include ('../partials/header_minimal')%>
    
    <!-- main start -->
    
    <main class="content_reg">
        <section class="section_reg" >
            <h1>LOGIN</h1>
            <% if (locals.errors) {
                errors.forEach(error => { %>
                <p style="font-size: 12px; color: red;"><%= error.msg %></p>
            <% })
            } %>
            <form class="form_reg"action="/usuarios/ingresar" method="POST">
                <label class="label_reg" for="user">USUARIO</label>
                <input class="input_reg" type="text" id="user" name="user" value="<%= locals.old && old.user ? old.user : '' %>">

                <label class="label_reg" for="pass">CONTRASEÑA</label>
                <input style="margin-bottom: 0%;"  class="input_reg" type="password" id="pass" name="pass" minlength="5"  maxlength="10" value="<%= locals.old && old.pass ? old.pass : '' %>">
                <div style="margin-left: 0%; display: flex; width: 25%; justify-content: space-between;">
                    <input style="margin-bottom: 0%;"  class="input_reg" type="checkbox" id="remember" name="remember">
                    <label  style="margin-top: auto; margin-bottom: auto;" class="label_reg" for="remember">RECORDARME</label>

                </div>
                
                <a href="#" style="margin-left: 0%;" class="link">Olvidaste tu contraseña</a>
                
                <button class="btn no_disapear" type="submit">INGRESAR</button>
                <a href="/usuarios/registrar" class="link">¿No tenés usuario? Registrate</a>
            </form>
        </section>
    </main>
     
    <!-- footer -->
    <%- include ('../partials/footer')%>
    
