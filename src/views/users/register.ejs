                <input class="input_reg" type="password" id="pass" name="password"  minlength="5"  maxlength="10" required>
                
                <label for="confirm_password"  class="label_reg">REPETIR CONTRASEÑA</label>
                <input class="input_reg" type="password" id="confirm_password" name="confirm_pass"  minlength="5" maxlength="10"required>
                
                <button class="btn no_disapear" type="submit">REGISTRAR</button>
            </form>
        </section>
