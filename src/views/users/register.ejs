    <!-- main start -->
    
    <main class="content_reg">
        <section class="section_reg">
            <form class="form_reg"action="/usuarios/registrar" method="POST">

                <label for="user" class="label_reg">NOMBRE DE USUARIO</label>
                <input type="text" id="user" name="user" required>

                <label for="first_name" class="label_reg">NOMBRE</label>
                <input type="text" id="first_name" name="first_name" required>

                <label for="last_name" class="label_reg">APELLIDO</label>
                <input type="text" id="last_name" name="last_name" required>

                <label for="email" class="label_reg">EMAIL</label>
                <input type="email" id="email" name="email" required>

